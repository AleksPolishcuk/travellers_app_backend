                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found current user"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/user"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "404": {
            "$ref": "#/components/responses/404-user"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    },
    "/users/{userId}": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get user by id",
        "operationId": "getUserById",
        "description": "Get a single user by id",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the user",
            "example": "6881563901add19ee16fcff5"
          }
        ],
        "responses": {
          "200": {
            "description": "Get user by id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found user with id 6881563901add19ee16fcff5"
                    },
                    "data": {
                      "$ref": "#/components/schemas/user"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "404": {
            "$ref": "#/components/responses/404-user"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      },
      "patch": {
        "tags": [
          "Users"
        ],
        "summary": "Update a user by Id",
        "operationId": "updateUserData",
        "description": "Updates the user its id.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the user to update",
            "example": "6912fb0ca18d66964cb28a9e"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "description": "Fields to update",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "New name"
                  },
                  "description": {
                    "type": "string",
                    "example": "Updated description"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Patch user by id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully patched an user!"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/user"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "404": {
            "$ref": "#/components/responses/404-user"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    },
    "/users/{userId}/avatar": {
      "patch": {
        "tags": [
          "Users"
        ],
        "summary": "Update user avatar",
        "operationId": "updateUserAvatar",
        "description": "Update the avatar for the currently authorized user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the user to update",
            "example": "6912fb0ca18d66964cb28a9e"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": [
                  "avatar"
                ],
                "properties": {
                  "avatar": {
                    "type": "string",
                    "format": "binary",
                    "description": "Image file for the new avatar"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Avatar successfully updated!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Avatar successfully updated!"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "avatarUrl",
                        "id"
                      ],
                      "properties": {
                        "user": {
                          "$ref": "#/components/schemas/user"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "403": {
            "$ref": "#/components/responses/403"
          },
          "404": {
            "$ref": "#/components/responses/404-user"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    },
    "/stories": {
      "get": {
        "tags": [
          "Travellers"
        ],
        "summary": "Get list of travellers",
        "operationId": "getTravellers",
        "description": "Get list of travellers with this endpoint",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          {
            "in": "query",
            "name": "perPage",
            "schema": {
              "type": "integer",
              "example": 9
            }
          },
          {
            "in": "query",
            "name": "sortOrder",
            "schema": {
              "type": "string",
              "enum": [
                "asc",
                "desc"
              ],
              "example": "asc"
            }
          },
          {
            "in": "query",
            "name": "sortBy",
            "schema": {
              "type": "string"
            },
            "description": "All stories fields can be mentioned. Default value - _id",
            "example": "_id"
          },
          {
            "in": "query",
            "name": "storyType",
            "schema": {
              "type": "string"
            },
            "description": "Filter by story type",
            "example": "Europa"
          },
          {
            "in": "query",
            "name": "isFavourite",
            "schema": {
              "type": "boolean"
            },
            "description": "Filter by favourite",
            "example": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully found stories!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found stories!"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "data",
                        "page",
                        "perPage",
                        "totalItems",
                        "totalPages",
                        "hasNextPage",
                        "hasPreviousPage"
                      ],
                      "properties": {
                        "data": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/story"
                          }
                        },
                        "page": {
                          "type": "integer",
                          "example": 1
                        },
                        "perPage": {
                          "type": "integer",
                          "example": 9
                        },
                        "totalItems": {
                          "type": "integer",
                          "example": 25
                        },
                        "totalPages": {
                          "type": "integer",
                          "example": 3
                        },
                        "hasNextPage": {
                          "type": "boolean",
                          "example": true
                        },
                        "hasPreviousPage": {
                          "type": "boolean",
                          "example": false
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "404": {
            "$ref": "#/components/responses/404"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      },
      "post": {
        "tags": [
          "Travellers"
        ],
        "summary": "Create a new traveller",
        "operationId": "createTraveller",
        "description": "Create a new traveller story",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/story"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Traveller successfully created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Traveller successfully created"
                    },
                    "data": {
                      "$ref": "#/components/schemas/story"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "401": {
              "$ref": "../../components/responses/401.yaml"
            },
            "500": {
              "$ref": "../../components/responses/500.yaml"
            },
            "$ref": "#/components/responses/400"
          }
        }
      }
    },
    "/stories/{storyId}": {
      "get": {
        "tags": [
          "Travellers"
        ],
        "summary": "Get a traveller by ID",
        "operationId": "getTravellerById",
        "description": "Get a single traveller by its ID",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "storyId",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the traveller",
            "example": "68ee414ab7ea35cf032c34df"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully found traveller",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found traveller"
                    },
                    "data": {
                      "$ref": "#/components/schemas/story"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "404": {
            "$ref": "#/components/responses/404"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      },
      "patch": {
        "tags": [
          "Travellers"
        ],
        "summary": "Update a traveller by ID",
        "operationId": "updateTraveller",
        "description": "Update fields of a traveller story",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "storyId",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the traveller to update",
            "example": "68ee414ab7ea35cf032c34df"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "description": "Fields to update",
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "New title"
                  },
                  "article": {
                    "type": "string",
                    "example": "Updated description"
                  },
                  "img": {
                    "type": "string",
                    "example": "https://res.cloudinary.com/uqwgdu/image/upload/newimage.png"
                  },
                  "category": {
                    "type": "string",
                    "example": "Europa"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Traveller successfully updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Traveller successfully updated"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "404": {
            "$ref": "#/components/responses/404"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "user": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "email",
          "password",
          "avatarUrl",
          "description",
          "onboardingCompleted",
          "savedStories"
        ],
        "properties": {
          "_id": {
            "description": "Users id",
            "type": "string",
            "example": "6881563901add19ee16fcff5"
          },
          "name": {
            "description": "User name",
            "type": "string",
            "example": "Дмитро Романенко"
          },
          "email": {
            "description": "User email",
            "type": "string",
            "example": "test123@gmail.com"
          },
          "password": {
            "type": "string",
            "example": "qwerty"
          },
          "avatarUrl": {
            "description": "User avatar link",
            "type": "string",
            "example": "https://ftp.goit.study/img/harmoniq/users/6881563901add19ee16fcff5.webp"
          },
          "description": {
            "description": "Description about the user",
            "type": "string",
            "example": "User description"
          },
          "onboardingCompleted": {
            "type": "boolean",
            "default": false,
            "example": false
          },
          "savedStories": {
            "description": "IDs or populated list of user's saved stories",
            "type": "array",
            "items": {
              "description": "Stories Id",
              "type": "string",
              "example": "68498236a100312bea07902a"
            }
          }
        }
      },
      "story": {
        "type": "object",
        "required": [
          "_id",
          "img",
          "title",
          "article",
          "category",
          "ownerId",
          "date",
          "favoriteCount"
        ],
        "properties": {
          "_id": {
            "description": "Story's id",
            "type": "string",
            "example": "68ee414ab7ea35cf032c34df"
          },
          "img": {
            "description": "Link to story photo",
            "type": "string",
            "example": "https://res.cloudinary.com/uqwgdu/image/upload/image.png"
          },
          "title": {
            "description": "Story's title",
            "type": "string",
            "example": "The name of the place"
          },
          "article": {
            "description": "Story's description",
            "type": "string",
            "example": "The description of the place"
          },
          "category": {
            "description": "Part of the world",
            "type": "string",
            "example": "Europa"
          },
          "ownerId": {
            "description": "User's id who owns the story",
            "type": "string",
            "example": "68ee414ab7ea35cf032c34df"
          },
          "date": {
            "description": "Date of the story",
            "type": "string",
            "example": "2025-03-06"
          },
          "favoriteCount": {
            "description": "Favorite story",
            "type": "integer",
            "example": 2
          }
        }
      }
    },
    "responses": {
      "400": {
        "description": "Bad Request",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 400
                },
                "message": {
                  "type": "string",
                  "example": "Bad Request"
                },
                "data": {
                  "type": "object",
                  "additionalProperties": true,
                  "description": "Error object produced by http-errors (may contain name, message, details, etc.)",
                  "example": {
                    "name": "BadRequest",
                    "message": "Validation failed",
                    "details": [
                      "name is required",
                      "title must be a string"
                    ]
                  }
                }
              }
            }
          }
        }
      },
      "401": {
        "description": "Unauthorized — missing or invalid token",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 401
                },
                "message": {
                  "type": "string",
                  "example": "Unauthorized"
                }
              }
            }
          }
        }
      },
      "403": {
        "description": "Forbidden. The user does not have permission to perform this action.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 403
                },
                "message": {
                  "type": "string",
                  "example": "You can only update your own avatar."
                }
              }
            }
          }
        }
      },
      "404": {
        "description": "Not found — no travellers found",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 404
                },
                "message": {
                  "type": "string",
                  "example": "No travellers found"
                }
              }
            }
          }
        }
      },
      "500": {
        "description": "Internal server error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "error"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 500
                },
                "message": {
                  "type": "string",
                  "example": "Internal server erro"
                },
                "error": {
                  "type": "string",
                  "description": "Human-readable internal error message (from err.message)",
                  "example": "Database connection failed"
                }
              }
            }
          }
        }
      },
      "404-user": {
        "description": "User not found",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
